#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no
pthread_lib=@FFSS_PTHREAD_LIB@
z_lib=@Z_LIB@
bz_lib=@BZ_LIB@
with_bz_lib=@O_BZ_LIB@
solaris=@SOLARIS@

usage()
{
	cat <<EOF
Usage: ffss-config [OPTIONS]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
        [--libs-static]
	[--cflags]
        [--with-bzlib]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

lib_gtk=yes

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @FFSS_MAJOR_VERSION@.@FFSS_MINOR_VERSION@.@FFSS_MICRO_VERSION@
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    --libs-static)
      echo_libs_static=yes
      ;;
    --with-bzlib)
      echo $with_bz_lib
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
      if test @includedir@ != /usr/include ; then
        includes=-I@includedir@
      fi
      echo $pthread_lib $includes
fi

if test "$echo_libs" = "yes"; then
      libdirs=-L@libdir@
      echo $libdirs -lffss -lskyutils $z_lib $bz_lib $solaris
fi

if test "$echo_libs_static" = "yes"; then
      libdirs=-L@libdir@
      echo $libdirs @libdir@/libffss.a -lskyutils $z_lib $bz_lib $solaris
fi

